{
  "version": 1,
  "consumer": "api-gateway",
  "contracts": [
    {
      "route": "/api/chat/{path:path}",
      "default_provider": "orchestrator-service",
      "legacy_fallback": "core-kernel-via-legacy-acl",
      "toggle": "ROUTE_CHAT_USE_LEGACY"
    },
    {
      "route": "/v1/content/{path:path}",
      "default_provider": "research-agent"
    },
    {
      "route": "/api/v1/data-mesh/{path:path}",
      "default_provider": "observability-service"
    },
    {
      "route": "/system/{path:path}",
      "default_provider": "orchestrator-service"
    }
  ]
}
